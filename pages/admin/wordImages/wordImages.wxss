/* pages/admin/wordImages/wordImages.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #4A90E2;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-button {
  background-color: #4A90E2;
  color: white;
  font-size: 30rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
}

.back-button {
  background-color: #999999;
}

.status-section, .stats-section, .word-list-section {
  background-color: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666;
}

.word-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.word-item {
  width: 220rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.word-item.no-image {
  background-color: #f0f0f0;
  height: 100rpx;
  justify-content: center;
}

.word-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.word-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  background-color: #eee;
} 