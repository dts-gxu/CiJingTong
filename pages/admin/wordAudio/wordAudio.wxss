/* pages/admin/wordAudio/wordAudio.wxss */
.container {
  padding: 20rpx;
}

.page-header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  width: 45%;
}

.upload-btn {
  background-color: #4CAF50;
  color: white;
}

.delete-btn {
  background-color: #f5f5f5;
  color: #666;
}

.delete-btn.active {
  background-color: #f44336;
  color: white;
}

.btn-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 批量删除控制区 */
.batch-delete-controls {
  background-color: #fff8e1;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.selection-info {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center;
  font-weight: bold;
}

.selection-actions {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.selection-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  margin: 5rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  color: #333;
  min-width: 20%;
  text-align: center;
}

.selection-btn.select-all {
  background-color: #e3f2fd;
  color: #2196F3;
}

.selection-btn.select-none {
  background-color: #f5f5f5;
  color: #757575;
}

.selection-btn.select-has {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.selection-btn.delete {
  background-color: #ffebee;
  color: #f44336;
}

.selection-btn[disabled] {
  opacity: 0.5;
}

/* 上传提示 */
.upload-tip {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: center;
  margin-bottom: 15rpx;
}

.upload-status {
  font-size: 26rpx;
  color: #4285f4;
  margin-top: 15rpx;
  text-align: center;
  font-weight: bold;
  margin-bottom: 15rpx;
}

/* 上传进度 */
.upload-progress {
  background-color: #f0f8ff;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

/* 删除进度 */
.delete-progress {
  background-color: #ffebee;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.search-icon {
  font-size: 30rpx;
  color: #666;
}

/* 过滤器 */
.filter-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.filter-title {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.filter-item {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.filter-item.active {
  background-color: #4CAF50;
  color: #fff;
}

/* 统计信息 */
.stats-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

/* 词汇列表 */
.word-list {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

/* 表头 */
.word-item-header {
  display: flex;
  padding: 20rpx;
  background-color: #f8f8f8;
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
  border-bottom: 1rpx solid #e0e0e0;
}

/* 词汇项 */
.word-items {
  max-height: 800rpx;
  overflow-y: auto;
}

.word-item {
  display: flex;
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: center;
}

.word-item.selected {
  background-color: #e8f5e9;
}

/* 选择框 */
.checkbox-col {
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  position: relative;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 12rpx;
  width: 8rpx;
  height: 16rpx;
  border: solid #4CAF50;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

.word-col {
  flex: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pinyin-col {
  flex: 2;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-col {
  flex: 2;
  display: flex;
  justify-content: center;
}

.status-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align: center;
}

.status-badge.has-audio {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.status-badge.no-audio {
  background-color: #ffebee;
  color: #f44336;
}

.action-col {
  flex: 3;
  display: flex;
  justify-content: flex-end;
}

.action-button {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.play-button {
  background-color: #e3f2fd;
  color: #2196F3;
}

.edit-button {
  background-color: #f5f5f5;
  color: #666;
}

.delete-button {
  background-color: #ffebee;
  color: #f44336;
}

/* 分页控制 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}

.page-button {
  padding: 15rpx 30rpx;
  background-color: #4CAF50;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.page-button.disabled {
  background-color: #e0e0e0;
  color: #999;
}

.page-info {
  margin: 0 30rpx;
  font-size: 26rpx;
  color: #666;
} 