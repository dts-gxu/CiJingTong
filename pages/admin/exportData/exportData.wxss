/* pages/admin/exportData/exportData.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
}

/* 导出选项样式 */
.export-options {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #a67c52;
}

.option-group {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.option-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.option-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.option-desc {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  display: block;
  margin-top: 10rpx;
}

/* 导出结果样式 */
.result-area {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.success-message, .error-message {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 8rpx;
}

.success-message {
  background-color: #f0fff0;
  flex-wrap: wrap;
}

.error-message {
  background-color: #fff0f0;
}

.success-message icon, .error-message icon {
  margin-right: 10rpx;
}

.success-message text {
  color: #4caf50;
  margin-right: 20rpx;
}

.error-message text {
  color: #f44336;
}

.btn-open {
  background-color: #4caf50;
  color: #fff;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 0;
  margin-left: auto;
}

/* 导出说明样式 */
.export-guide {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.guide-content {
  font-size: 28rpx;
  color: #666;
}

.guide-item {
  margin-bottom: 10rpx;
}

/* 底部按钮样式 */
.footer {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}

.btn {
  width: 48%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-export {
  background-color: #a67c52;
  color: #fff;
}

.btn-export[disabled] {
  background-color: #d6c3b0;
  color: #fff;
}

.btn-back {
  background-color: #f0f0f0;
  color: #333;
} 