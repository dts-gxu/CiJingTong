/* pages/admin/addWord/addWord.wxss */
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 15rpx;
  color: white;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 标签页样式 */
.tabs {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 30rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

/* 表单容器样式 */
.form-container {
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  height: 80vh;
}

.form-scroll {
  flex: 1;
  padding: 30rpx;
  height: 100%;
  box-sizing: border-box;
}

/* 表单分区样式 */
.form-section {
  margin-bottom: 40rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 30rpx;
  flex-shrink: 0;
}

.form-section:last-child {
  border-bottom: none;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 3px solid #667eea;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -3rpx;
  left: 0;
  width: 60rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

/* 表单项样式 */
.form-group {
  margin-bottom: 25rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.required {
  color: #e74c3c;
  font-weight: bold;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
  background-color: #fafafa;
}

.form-input:focus {
  border-color: #667eea;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
  background-color: #fafafa;
}

.form-textarea:focus {
  border-color: #667eea;
  background-color: #fff;
}

/* 图片管理样式 */
.image-section {
  background-color: #f8f9fa;
  padding: 25rpx;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
}

.current-image {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-container {
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.word-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 3rpx solid #e0e0e0;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.image-actions {
  display: flex;
  gap: 15rpx;
}

.no-image {
  text-align: center;
  padding: 40rpx 0;
}

.btn-small {
  padding: 12rpx 25rpx;
  font-size: 24rpx;
  min-height: auto;
  line-height: 1.5;
  border-radius: 8rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 15rpx 35rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  margin: 0;
  min-height: auto;
  line-height: 1.8;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}

.btn-danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #fff;
  padding: 12rpx 25rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin: 0;
  min-height: auto;
  line-height: 1.5;
}

/* 练习题样式 */
.quiz-options {
  background-color: #f8f9fa;
  padding: 25rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.quiz-option {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.quiz-option:last-child {
  margin-bottom: 0;
}

.option-label {
  width: 80rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 15rpx;
}

.form-picker {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
}

.picker-value {
  color: #333;
}

/* 预览样式 */
.preview-container {
  background-color: #f8f9fa;
  padding: 25rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.preview-item {
  margin-bottom: 20rpx;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.preview-content {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.preview-content view {
  margin-bottom: 8rpx;
}

/* 消息容器样式 */
.message-container {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.error-message {
  padding: 20rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #fff;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  text-align: center;
  animation: shake 0.5s ease-in-out;
}

.success-message {
  padding: 20rpx;
  background: linear-gradient(135deg, #51cf66 0%, #40c057 100%);
  color: #fff;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  text-align: center;
  animation: bounce 0.6s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 按钮组样式 */
.button-group {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  position: sticky;
  bottom: 0;
  z-index: 10;
}

.btn {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
}

.btn-default {
  background-color: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #dee2e6;
}

.btn-default:active {
  background-color: #e9ecef;
}

.btn[disabled] {
  opacity: 0.6;
  transform: none !important;
}

/* 批量导入样式 */
.batch-container {
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.upload-area {
  padding: 30rpx;
}

.format-guide {
  margin-bottom: 30rpx;
  padding: 25rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  border-left: 5rpx solid #667eea;
}

.guide-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.guide-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.6;
  padding-left: 20rpx;
  position: relative;
}

.guide-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #667eea;
  font-weight: bold;
}

.file-info {
  margin: 30rpx 0;
  padding: 25rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  font-weight: 500;
}

.file-placeholder {
  font-size: 28rpx;
  color: #999;
}

.btn-select, .btn-upload {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
}

.btn-select {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #333;
  border: 2rpx solid #dee2e6;
}

.btn-select:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
}

.btn-upload {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.btn-upload:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.4);
}

.btn-upload[disabled] {
  background: linear-gradient(135deg, #ccc 0%, #999 100%);
  box-shadow: none;
  transform: none;
}

/* 图片上传弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.image-upload-modal {
  max-height: 60vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  padding: 0 10rpx;
  opacity: 0.8;
}

.modal-close:active {
  opacity: 1;
}

.modal-body {
  padding: 30rpx;
}

.upload-info {
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.upload-actions {
  display: flex;
  justify-content: center;
}

.upload-btn {
  width: 200rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  background-color: #f8f9fa;
}

.btn-cancel {
  width: 150rpx;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  background-color: #f8f9fa;
  color: #666;
  border: 2rpx solid #dee2e6;
  border-radius: 8rpx;
  text-align: center;
} 