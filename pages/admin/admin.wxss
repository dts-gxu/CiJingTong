/* pages/admin/admin.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.menu-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.icon-text {
  font-size: 40rpx;
  line-height: 60rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  color: #999;
  font-size: 32rpx;
}

.footer {
  margin-top: auto;
  padding: 40rpx 0;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #e64340;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.admin-login-card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.primary-button {
  width: 100%;
  height: 88rpx;
  background-color: #4A90E2;
  color: white;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.error-message {
  color: #f44336;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.admin-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.admin-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-button {
  font-size: 28rpx;
  color: #666;
  background: none;
  border: 1px solid #ccc;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* 标签页样式 */
.tab-container {
  display: flex;
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4A90E2;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #4A90E2;
}

/* 学生统计样式 */
.stats-summary {
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
}

.student-list {
  width: 100%;
}

.student-card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.student-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.student-info {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.student-id {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.student-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.student-progress, .student-rate {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.progress-section {
  margin: 20rpx 0;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.progress-bars {
  width: 100%;
}

.progress-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-label {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-item progress {
  flex: 1;
  margin: 0 10rpx;
}

.progress-value {
  width: 40rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.student-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.last-login {
  font-size: 24rpx;
  color: #999;
}

.view-details {
  font-size: 24rpx;
  color: #4A90E2;
}

/* 白名单设置样式 */
.whitelist-header {
  margin-bottom: 30rpx;
}

.whitelist-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.whitelist-desc {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.action-button:first-child {
  margin-left: 0;
}

.action-button:last-child {
  margin-right: 0;
}

.button-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.button-text {
  font-size: 24rpx;
  color: #333;
}

.upload-status {
  font-size: 24rpx;
  color: #4A90E2;
  text-align: center;
  margin-bottom: 20rpx;
}

.whitelist-table {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.table-header {
  display: flex;
  background-color: #f5f5f5;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.table-row {
  display: flex;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #eee;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  text-align: center;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-button {
  font-size: 24rpx;
  color: #f44336;
  background: none;
  border: 1px solid #f44336;
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 48rpx;
}

.empty-state {
  width: 100%;
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.whitelist-tips {
  margin-top: 30rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  padding: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

/* 搜索框样式 */
.search-box {
  display: flex;
  margin: 20rpx 0;
  padding: 0 30rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.search-button {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #4285f4;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
}

/* 学生详情弹窗样式 */
.student-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.student-info-detail {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
}

.info-label {
  width: 160rpx;
  color: #666666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
} 