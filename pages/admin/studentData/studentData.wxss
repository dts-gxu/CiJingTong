/* pages/admin/studentData/studentData.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
}

/* 搜索栏样式 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input-wrap {
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 70rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-btn, .clear-btn {
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.search-btn {
  background-color: #a67c52;
  color: #fff;
}

.clear-btn {
  background-color: #f0f0f0;
  color: #666;
}

/* 标签切换样式 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #a67c52;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 6rpx;
  background-color: #a67c52;
  border-radius: 3rpx;
}

/* 排序选项样式 */
.sort-options {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sort-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.sort-item {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.sort-item.active {
  color: #a67c52;
  font-weight: bold;
  background-color: #f9f2ea;
}

.sort-icon {
  margin-left: 5rpx;
}

/* 学生列表样式 */
.student-list {
  margin-bottom: 30rpx;
}

.student-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.student-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.student-info {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.student-id {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.student-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.student-progress, .student-rate {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

.progress-section {
  margin: 20rpx 0;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.progress-bars {
  width: 100%;
}

.progress-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-label {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-item progress {
  flex: 1;
  margin: 0 10rpx;
}

.progress-value {
  width: 40rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #a67c52;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部操作栏样式 */
.footer {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.btn {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-back {
  background-color: #a67c52;
  color: #fff;
} 