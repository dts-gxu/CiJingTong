/* pages/stats/stats.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f4e6; /* 古风米黄色背景 */
  min-height: 100vh;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" opacity="0.05"><path d="M0,0 L100,0 L100,100 L0,100 Z" stroke="%23987543" stroke-width="1" fill="none" /></svg>');
  background-size: 40rpx 40rpx;
}

.user-info-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #fff9e6;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
  position: relative;
}

.user-info-card::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  right: 12rpx;
  bottom: 12rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 6rpx;
  opacity: 0.5;
}

.user-avatar-container {
  margin-right: 30rpx;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 2px solid rgba(122, 93, 59, 0.3);
  padding: 3px;
  background-color: #fff;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 10rpx;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
}

.user-id {
  font-size: 28rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

.stats-summary {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.summary-item {
  width: 30%;
  padding: 25rpx 0;
  text-align: center;
  background-color: #fff9e6;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.summary-item::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 6rpx;
  opacity: 0.5;
}

.summary-value {
  font-size: 42rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 10rpx;
  font-family: 'KaiTi', '楷体', serif;
}

.summary-label {
  font-size: 24rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

.tab-container {
  margin-bottom: 40rpx;
  background-color: #fff9e6;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2px solid #d9c7a7;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
}

.tabs {
  display: flex;
  border-bottom: 1px solid rgba(122, 93, 59, 0.2);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 32rpx;
  color: #7a5d3b;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
  position: relative;
}

.tab.active {
  color: #4a3520;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 4px;
  background-color: #987543;
  border-radius: 4px;
}

.tab-content {
  padding: 30rpx;
}

.stats-card {
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a3520;
  margin-bottom: 30rpx;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
  position: relative;
  padding-left: 24rpx;
  border-left: 6rpx solid #987543;
}

.progress-item {
  margin-bottom: 30rpx;
}

.progress-item:last-child {
  margin-bottom: 0;
}

.progress-label {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.progress-name {
  font-size: 30rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

.progress-value {
  font-size: 30rpx;
  color: #4a3520;
  font-weight: bold;
  font-family: 'KaiTi', '楷体', serif;
}

.progress-bar {
  height: 12rpx;
  background-color: rgba(122, 93, 59, 0.1);
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  width: 100%;
  margin-top: 5rpx;
}

.progress-fill {
  height: 100%;
  background-color: #987543;
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.learning-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25rpx;
}

.learning-item {
  padding: 25rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  border: 1px solid rgba(122, 93, 59, 0.2);
  text-align: center;
}

.learning-value {
  font-size: 42rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 10rpx;
  font-family: 'KaiTi', '楷体', serif;
}

.learning-label {
  font-size: 28rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

.memory-distribution {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  width: 100%;
  padding: 15rpx 0;
}

.memory-item {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  border-right: 1px dashed rgba(122, 93, 59, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.memory-item:last-child {
  border-right: none;
}

.memory-count {
  font-size: 36rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 5rpx;
  font-family: 'KaiTi', '楷体', serif;
}

.memory-label {
  font-size: 22rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

.info-text {
  font-size: 30rpx;
  color: #7a5d3b;
  line-height: 1.8;
  text-align: justify;
  font-family: 'SimSun', '宋体', serif;
  padding: 10rpx;
}

/* 自定义阶段5的进度条颜色 */
.stage-5-color {
  background-color: #e74c3c !important;
}

/* 添加提示文本样式 */
.note-text {
  font-size: 24rpx;
  color: #888;
  margin: 10rpx 0 20rpx;
  padding-left: 10rpx;
}

.info-text .note {
  color: #e74c3c;
  font-size: 24rpx;
  display: block;
  margin-top: 10rpx;
} 