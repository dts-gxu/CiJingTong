/* pages/user/user.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f4e6; /* 古风米黄色背景 */
  min-height: 100vh;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" opacity="0.05"><path d="M0,0 L100,0 L100,100 L0,100 Z" stroke="%23987543" stroke-width="1" fill="none" /></svg>');
  background-size: 40rpx 40rpx;
}

/* 用户头部样式 */
.user-header {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #fff9e6;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
  position: relative;
}

.user-header::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  right: 12rpx;
  bottom: 12rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 6rpx;
  opacity: 0.5;
}

.avatar-container {
  margin-right: 30rpx;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 2px solid rgba(122, 93, 59, 0.3);
  padding: 3px;
  background-color: #fff;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 10rpx;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
}

.user-id {
  font-size: 28rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 24rpx;
  color: #987543;
  background-color: rgba(152, 117, 67, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 快速统计样式 */
.quick-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25rpx;
  margin-bottom: 40rpx;
}

.stats-item {
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
  text-align: center;
  position: relative;
}

.stats-item::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 6rpx;
  opacity: 0.5;
}

.stats-value {
  font-size: 42rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 10rpx;
  font-family: 'KaiTi', '楷体', serif;
}

.stats-label {
  font-size: 28rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

/* 复习提醒样式 */
.review-section {
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #4a3520;
  font-weight: bold;
}

.view-all-btn {
  font-size: 24rpx;
  color: #3498db;
  padding: 6rpx 16rpx;
  border: 1px solid #3498db;
  border-radius: 12rpx;
  background-color: rgba(52, 152, 219, 0.05);
}

.review-count {
  font-size: 24rpx;
  color: #987543;
  background-color: rgba(231, 76, 60, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.review-reminder {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(231, 76, 60, 0.05);
  border-radius: 8rpx;
  border: 1px solid rgba(231, 76, 60, 0.2);
}

.reminder-text {
  font-size: 28rpx;
  color: #4a3520;
}

.review-btn {
  padding: 8rpx 20rpx !important;
  font-size: 24rpx !important;
  border-radius: 20rpx !important;
}

/* 成就系统样式 */
.achievements-section {
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
}

.achievements-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(152, 117, 67, 0.05);
  border-radius: 8rpx;
  border: 1px solid rgba(152, 117, 67, 0.1);
}

.achievement-item.unlocked {
  background-color: rgba(52, 152, 219, 0.05);
  border-color: rgba(52, 152, 219, 0.2);
}

.achievement-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.achievement-info {
  flex: 1;
}

.achievement-title {
  font-size: 28rpx;
  color: #4a3520;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #7a5d3b;
}

.achievement-status {
  text-align: right;
}

.status-text {
  font-size: 22rpx;
  color: #987543;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: rgba(152, 117, 67, 0.1);
}

.achievement-item.unlocked .status-text {
  color: #3498db;
  background-color: rgba(52, 152, 219, 0.1);
}

/* 菜单列表样式 */
.menu-card {
  background-color: #fff9e6;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
  margin-bottom: 40rpx;
  position: relative;
}

.menu-card::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  right: 12rpx;
  bottom: 12rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 6rpx;
  opacity: 0.5;
  z-index: 1;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 35rpx 30rpx;
  border-bottom: 1px solid rgba(122, 93, 59, 0.1);
  position: relative;
  z-index: 2;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 25rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #4a3520;
  font-family: 'SimSun', '宋体', serif;
}

.menu-detail {
  margin-right: 20rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #987543;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  color: #7a5d3b;
  font-family: 'SimSun', '宋体', serif;
}

/* 设置开关样式 */
.settings-toggles {
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  border: 2px solid #d9c7a7;
}

.toggle-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1px solid rgba(122, 93, 59, 0.1);
}

.toggle-item:last-child {
  border-bottom: none;
}

.toggle-label {
  font-size: 30rpx;
  color: #4a3520;
  font-family: 'SimSun', '宋体', serif;
}

/* 按钮样式 */
.logout-button {
  width: 100%;
  height: 90rpx;
  background-color: #987543;
  color: #fff9e6;
  font-size: 34rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.25);
  border: 2px solid #7a5d3b;
  position: relative;
  overflow: hidden;
}

.logout-button::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  bottom: 6rpx;
  border: 1px dashed rgba(255, 249, 230, 0.3);
  pointer-events: none;
  border-radius: 6rpx;
}

.footer {
  margin-top: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #7a5d3b;
  opacity: 0.7;
  font-family: 'SimSun', '宋体', serif;
  letter-spacing: 2rpx;
}

/* 简化版全部成就弹窗 */
.achievements-modal-simple {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
}

.modal-simple-content {
  background: #fff9e6;
  border-radius: 16rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.3);
  border: 2px solid #d9c7a7;
}

.simple-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid rgba(122, 93, 59, 0.2);
  background: linear-gradient(135deg, #f8f4e6, #fff9e6);
  border-radius: 16rpx 16rpx 0 0;
}

.simple-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #4a3520;
  font-family: 'KaiTi', '楷体', serif;
}

.simple-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #7a5d3b;
  background: rgba(122, 93, 59, 0.1);
  border-radius: 50%;
  cursor: pointer;
}

.simple-achievements {
  padding: 20rpx 30rpx;
}

.simple-category {
  margin-bottom: 30rpx;
}

.simple-category-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a3520;
  margin-bottom: 15rpx;
  padding: 10rpx 15rpx;
  background: rgba(122, 93, 59, 0.08);
  border-radius: 8rpx;
  border-left: 3px solid #987543;
}

.simple-grid {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.simple-achievement {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(122, 93, 59, 0.1);
  transition: all 0.2s ease;
}

.simple-achievement.simple-unlocked {
  background: rgba(46, 204, 113, 0.1);
  border-color: rgba(46, 204, 113, 0.3);
}

.simple-achievement.simple-locked {
  opacity: 0.6;
  background: rgba(122, 93, 59, 0.05);
}

.simple-icon {
  font-size: 28rpx;
  margin-right: 15rpx;
  width: 40rpx;
  text-align: center;
}

.simple-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.simple-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #4a3520;
  margin-bottom: 4rpx;
}

.simple-desc {
  font-size: 20rpx;
  color: #7a5d3b;
  line-height: 1.3;
}

.simple-status {
  font-size: 20rpx;
  font-weight: bold;
  width: 30rpx;
  text-align: center;
}

.simple-achievement.simple-unlocked .simple-status {
  color: #27ae60;
}

.simple-achievement.simple-locked .simple-status {
  color: #bdc3c7;
}

.simple-footer {
  padding: 20rpx 30rpx 30rpx;
  border-top: 1px solid rgba(122, 93, 59, 0.2);
}

.simple-btn {
  width: 100%;
  height: 70rpx;
  background: linear-gradient(135deg, #3498db, #2ecc71);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 35rpx;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(52, 152, 219, 0.25);
  font-family: 'KaiTi', '楷体', serif;
} 