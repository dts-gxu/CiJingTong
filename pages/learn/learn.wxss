.container {
  padding: 30rpx;
  background-color: #f8f4e6; /* 古风米黄色背景 */
  min-height: 100vh;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" opacity="0.05"><path d="M0,0 L100,0 L100,100 L0,100 Z" stroke="%23987543" stroke-width="1" fill="none" /></svg>');
  background-size: 40rpx 40rpx;
}

.progress-header {
  width: 100%;
  margin-bottom: 40rpx;
  position: relative;
  padding: 8rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #7a5d3b;
  margin-top: 12rpx;
  text-align: right;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 2rpx;
}

progress {
  border: 1px solid rgba(122, 93, 59, 0.3);
  border-radius: 8rpx;
  height: 8rpx;
}

/* 覆盖微信原生进度条样式 */
.wx-progress-inner-bar {
  background-color: #987543 !important;
}

.wx-progress-info {
  color: #7a5d3b !important;
  font-family: 'KaiTi', '楷体', serif !important;
}

.progress-bar {
  height: 10rpx;
  background-color: #eee;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4A90E2;
  border-radius: 5rpx;
  transition: width 0.3s;
}

.word-card {
  width: 100%;
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  border: 2px solid #d9c7a7;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" opacity="0.03"><path d="M20,20 C40,20 60,20 80,20 C80,40 80,60 80,80 C60,80 40,80 20,80 C20,60 20,40 20,20 Z" stroke="%23987543" stroke-width="2" fill="none" /></svg>');
  background-size: 160rpx 160rpx;
  background-position: center;
}

.word-text {
  font-size: 90rpx;
  font-weight: bold;
  color: #4a3520;
  font-family: 'SimSun', '宋体', serif;
  text-shadow: 1px 1px 2px rgba(122, 93, 59, 0.1);
  letter-spacing: 6rpx;
  margin-top: 15rpx;
}

.pinyin {
  font-size: 42rpx;
  color: #7a5d3b;
  margin-bottom: 10rpx;
  text-align: center;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
  display: block;
}

.word-rank {
  font-size: 24rpx;
  color: #999;
}

.word-translations {
  margin-bottom: 30rpx;
}

.translations-container {
  width: 100%;
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  margin-bottom: 40rpx;
  border: 2px solid #d9c7a7;
  position: relative;
}

.translations-container::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  right: 12rpx;
  bottom: 12rpx;
  border: 1px dashed rgba(122, 93, 59, 0.3);
  pointer-events: none;
  border-radius: 6rpx;
}

.translation-item {
  margin-bottom: 30rpx;
  padding: 0 15rpx;
}

.translation-item:last-child {
  margin-bottom: 0;
}

.translation-label {
  font-size: 32rpx;
  color: #7a5d3b;
  margin-bottom: 15rpx;
  display: block;
  font-family: 'KaiTi', '楷体', serif;
  border-left: 6rpx solid #987543;
  padding-left: 20rpx;
}

.translation-text {
  font-size: 36rpx;
  color: #4a3520;
  display: block;
  font-family: 'SimSun', '宋体', serif;
  line-height: 1.6;
}

/* 例句容器样式 */
.example-container {
  margin-top: 30rpx;
  background-color: #fff8e1;
  border-radius: 16rpx;
  padding: 20rpx;
  width: 90%;
}

.example-label {
  display: block;
  font-size: 28rpx;
  color: #9b7d38;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.example-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.example-chinese {
  font-size: 30rpx;
  color: #333;
}

.example-pinyin {
  font-size: 26rpx;
  color: #666;
}

.example-translation {
  font-size: 26rpx;
  color: #666;
  font-style: italic;
}

/* 练习题预览样式 */
.exercises-container {
  display: flex;
  flex-direction: column;
  width: 90%;
  gap: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.exercise-preview {
  background-color: #e3f2fd;
  border-radius: 16rpx;
  padding: 20rpx;
}

.exercise-label {
  display: block;
  font-size: 28rpx;
  color: #1976d2;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.exercise-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.exercise-question {
  font-size: 30rpx;
  color: #333;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.option-item {
  display: flex;
  align-items: center;
}

.option-label {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: bold;
  margin-right: 10rpx;
  min-width: 40rpx;
}

.option-value {
  font-size: 28rpx;
  color: #333;
}

.answer {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #4caf50;
  font-weight: bold;
}

.image-container {
  width: 100%;
  background-color: #fff9e6;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(122, 93, 59, 0.18);
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  border: 2px solid #d9c7a7;
}

.word-image {
  width: 100%;
  height: 350rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(122, 93, 59, 0.2);
}

/* 音频控制区域 */
.audio-controls {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  width: 100%;
}

.audio-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin: 0 10rpx;
}

.audio-button.playing {
  background-color: #e0f2f1;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.audio-button.recording {
  background-color: #ffebee;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  animation: pulse 1s infinite;
}

.audio-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.audio-text {
  font-size: 24rpx;
  color: #666;
}

/* 录音状态提示 */
.recording-status {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  background-color: rgba(255, 0, 0, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.recording-indicator {
  width: 16rpx;
  height: 16rpx;
  background-color: #f44336;
  border-radius: 50%;
  margin-right: 10rpx;
  position: relative;
}

.recording-pulse {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(244, 67, 54, 0.5);
  animation: recordingPulse 1s infinite ease-out;
}

@keyframes recordingPulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(3);
    opacity: 0;
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.quiz-container {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.quiz-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.options-container {
  display: flex;
  flex-direction: column;
}

.bottom-actions {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.bottom-actions button {
  width: 48%;
  height: 100rpx;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 6rpx;
  border-radius: 12rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-button {
  background-color: #987543 !important;
  color: #fff9e6 !important;
  border: 2px solid #7a5d3b !important;
  box-shadow: 0 6rpx 12rpx rgba(122, 93, 59, 0.25);
}

.secondary-button {
  background-color: rgba(255, 255, 255, 0.6) !important;
  color: #7a5d3b !important;
  border: 2px solid #d9c7a7 !important;
}

/* AI解释部分的样式代码保持不变 */

/* 调试信息容器样式 */
.debug-container {
  display: none;
}

.debug-header {
  display: none;
}

.debug-title {
  display: none;
}

.debug-close {
  display: none;
}

.debug-content {
  display: none;
}

.debug-text {
  display: none;
}

/* AI解读按钮 */
.ai-explanation-button {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 15px 0px 30px;
  padding: 20px 25px;
  background-color: rgba(152, 117, 67, 0.08);
  border-radius: 12rpx;
  box-shadow: 0 4px 10px rgba(122, 93, 59, 0.15);
  transition: all 0.3s ease;
  border: 2px solid #d9c7a7;
  position: relative;
}

.ai-explanation-button.active {
  background-color: rgba(152, 117, 67, 0.12);
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  border-bottom: none;
}

.ai-explanation-button .ai-icon {
  width: 32px;
  height: 32px;
  margin-right: 15px;
}

.ai-explanation-button text {
  flex-grow: 1;
  font-size: 36rpx;
  font-weight: 500;
  color: #4a3520;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
}

.ai-explanation-button .toggle-icon {
  font-size: 30rpx;
  color: #987543;
  font-weight: 500;
  font-family: 'KaiTi', '楷体', serif;
}

.ai-explanation-button::before {
  content: '✦';
  position: absolute;
  left: 10px;
  color: #987543;
  font-size: 20px;
}

.ai-explanation-button::after {
  content: '✦';
  position: absolute;
  right: 10px;
  color: #987543;
  font-size: 20px;
}

/* AI解读内容区域 */
.ai-explanation-container {
  margin: 0 0px 30px;
  padding: 30px 25px;
  background-color: rgba(255, 249, 230, 0.8);
  border-radius: 12rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  box-shadow: 0 6px 16px rgba(122, 93, 59, 0.18);
  animation: fadeIn 0.3s ease;
  border: 2px solid #d9c7a7;
  border-top: none;
  position: relative;
}

.ai-explanation-container::before {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 6rpx;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.ai-explanation-header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(122, 93, 59, 0.2);
}

.ai-avatar {
  width: 36px;
  height: 36px;
  margin-right: 15px;
  border-radius: 50%;
  border: 1px solid rgba(122, 93, 59, 0.3);
  padding: 3px;
}

.ai-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #987543;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
}

.ai-explanation-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #4a3520;
  text-align: justify;
  font-family: 'SimSun', '宋体', serif;
  padding: 0 15rpx;
}

/* 加载动画 */
.ai-explanation-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.loading-dots {
  display: flex;
  margin-bottom: 20px;
}

.dot {
  width: 12px;
  height: 12px;
  margin: 0 8px;
  background-color: #987543;
  border-radius: 50%;
  animation: dotPulse 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: 0s;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dotPulse {
  0%, 80%, 100% { transform: scale(0.6); opacity: 0.6; }
  40% { transform: scale(1); opacity: 1; }
}

.ai-explanation-loading text {
  font-size: 30rpx;
  color: #7a5d3b;
  font-family: 'KaiTi', '楷体', serif;
}

/* 错误提示 */
.ai-explanation-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 35px 0;
}

.ai-explanation-error text {
  font-size: 30rpx;
  color: #a94442;
  margin-bottom: 20px;
  font-family: 'SimSun', '宋体', serif;
}

.retry-button {
  padding: 12px 24px;
  background-color: rgba(152, 117, 67, 0.1);
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #7a5d3b;
  border: 1px solid rgba(122, 93, 59, 0.3);
  font-family: 'KaiTi', '楷体', serif;
}

.retry-button:active {
  background-color: rgba(152, 117, 67, 0.2);
}