.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f6f6f6;
}

.chat-container {
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}

.chat-list {
  height: 100%;
}

.message {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.user {
  align-items: flex-end;
}

.assistant {
  align-items: flex-start;
}

.message-content {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-break: break-all;
  font-size: 28rpx;
  line-height: 1.5;
}

.user .message-content {
  background-color: #4A90E2;
  color: #ffffff;
  border-radius: 18rpx 4rpx 18rpx 18rpx;
}

.assistant .message-content {
  background-color: #ffffff;
  color: #333333;
  border-radius: 4rpx 18rpx 18rpx 18rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.input-container {
  display: flex;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e6e6e6;
}

.input {
  flex: 1;
  height: 80rpx;
  background-color: #f2f2f2;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #4A90E2;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.send-button[disabled] {
  background-color: #cccccc;
}

.loading {
  display: flex;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #999;
  margin: 0 6rpx;
  animation: dotFlashing 1.5s infinite linear alternate;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.5s;
}

.loading-dot:nth-child(3) {
  animation-delay: 1s;
}

@keyframes dotFlashing {
  0% {
    opacity: 0.2;
  }
  100% {
    opacity: 1;
  }
} 