/**app.wxss**/
page {
  background-color: #f8f4e6; /* 古风米黄色背景 */
  color: #4a3520;
  font-family: 'SimSun', '宋体', serif;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" opacity="0.05"><path d="M0,0 L100,0 L100,100 L0,100 Z" stroke="%23987543" stroke-width="1" fill="none" /></svg>');
  background-size: 40rpx 40rpx;
}

/* 通用容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 30rpx;
}

/* 标题样式 */
.page-title {
  font-size: 36rpx;
  color: #7a5d3b;
  text-align: center;
  margin: 20rpx 0 40rpx;
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title::before,
.page-title::after {
  content: '';
  display: block;
  height: 1px;
  width: 60rpx;
  background-color: rgba(122, 93, 59, 0.3);
  margin: 0 20rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff9e6;
  border-radius: 8rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(122, 93, 59, 0.15);
  margin-bottom: 30rpx;
  border: 1px solid #d9c7a7;
  position: relative;
}

.card::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border: 1px dashed rgba(122, 93, 59, 0.2);
  pointer-events: none;
  border-radius: 4rpx;
}

/* 按钮样式 */
.btn {
  font-family: 'KaiTi', '楷体', serif;
  letter-spacing: 4rpx;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background-color: #987543 !important;
  color: #fff9e6 !important;
  border: 1px solid #7a5d3b !important;
  box-shadow: 0 4rpx 8rpx rgba(122, 93, 59, 0.2);
}

.btn-secondary {
  background-color: rgba(255, 255, 255, 0.6) !important;
  color: #7a5d3b !important;
  border: 1px solid #d9c7a7 !important;
}

/* 输入框样式 */
.input {
  background-color: rgba(255, 255, 255, 0.6);
  border: 1px solid #d9c7a7;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #4a3520;
  margin-bottom: 20rpx;
  font-family: 'SimSun', '宋体', serif;
}

/* 列表样式 */
.list-item {
  padding: 20rpx;
  border-bottom: 1px solid rgba(122, 93, 59, 0.2);
  display: flex;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-title {
  font-size: 30rpx;
  color: #4a3520;
  margin-bottom: 10rpx;
  font-family: 'SimSun', '宋体', serif;
}

.list-item-desc {
  font-size: 26rpx;
  color: #7a5d3b;
  font-family: 'KaiTi', '楷体', serif;
}

/* 分割线 */
.divider {
  height: 1px;
  background-color: rgba(122, 93, 59, 0.2);
  margin: 20rpx 0;
  position: relative;
}

.divider::before {
  content: '✦';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: #f8f4e6;
  padding: 0 20rpx;
  color: #987543;
  font-size: 24rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 6rpx 20rpx;
  background-color: rgba(152, 117, 67, 0.1);
  color: #7a5d3b;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  border: 1px solid rgba(122, 93, 59, 0.3);
  font-family: 'KaiTi', '楷体', serif;
}

/* 图标装饰 */
.icon-decoration {
  font-family: 'SimSun', '宋体', serif;
  color: #987543;
  margin: 0 10rpx;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 10rpx;
  height: 10rpx;
}

::-webkit-scrollbar-thumb {
  background-color: rgba(122, 93, 59, 0.3);
  border-radius: 10rpx;
}

::-webkit-scrollbar-track {
  background-color: rgba(122, 93, 59, 0.1);
  border-radius: 10rpx;
}

