}

.card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.btn {
  background-color: #4A90E2;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 20rpx 0;
  border: none;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
}

.btn-disabled {
  background-color: #cccccc;
  color: #999999;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.text-center {
  text-align: center;
}

.text-primary {
  color: #4A90E2;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-danger {
  color: #f5222d;
}

.margin-top {
  margin-top: 20rpx;
}

.margin-bottom {
  margin-bottom: 20rpx;
}

.word-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  padding: 40rpx;
  margin: 30rpx 0;
}

.word-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.word-pinyin {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.word-translation {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.word-example {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.word-image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 10rpx 0;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.option-selected {
  background-color: #e6f7ff;
  border: 1px solid #91d5ff;
}

.option-correct {
  background-color: #f6ffed;
  border: 1px solid #b7eb8f;
}

.option-wrong {
  background-color: #fff1f0;
  border: 1px solid #ffa39e;
}

.option-key {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #eee;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.progress-bar {
  height: 10rpx;
  background-color: #eee;
  border-radius: 5rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4A90E2;
  border-radius: 5rpx;
}

/* 全局按钮样式 */
.primary-button {
  width: 100%;
  background-color: #4A90E2;
  color: white;
  border-radius: 50rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.secondary-button {
  width: 100%;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 50rpx;
  margin: 20rpx 0;
}

/* 全局标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

/* 表单样式 */
.form-item {
  width: 100%;
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

/* 进度条样式 */
.progress-header {
  width: 100%;
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: right;
} 